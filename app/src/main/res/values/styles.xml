<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/redVariant</item>

        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/orangeVariant</item>

        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="bottomNavigationStyle">@style/widget.Pokedex.BottomNavigationView</item>
        <item name="tabStyle">@style/widget.Pokedex.TabLayout</item>
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>

    </style>
    <style name="AppTheme" parent="BaseAppTheme"/>
    <style name="widget.Pokedex.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">?android:colorBackground</item>
    </style>
    <style name="widget.Pokedex.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">?android:colorBackground</item>
    </style>
</resources>
